<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/marker_top_static_name"
            android:clickable="true"
            android:padding="3dp"
            android:text="玩具模型"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/marker_top_static_more"
            android:text="更多"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/icon_arrow_map"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="16sp"
            />
    </RelativeLayout>

    <ImageView
        android:id="@+id/marker_top_static_img1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y300"
        android:src="@drawable/img_default_300x200"
        android:scaleType="fitXY"
        />
    <View
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y300"
        android:orientation="horizontal"
        android:weightSum="3"
        >
        <ImageView
            android:id="@+id/marker_top_static_img2"
            android:layout_width="0dp"
            android:layout_height="@dimen/y300"
            android:layout_weight="1"
            android:src="@drawable/img_default_90x90"
            android:scaleType="fitXY"
            />
        <ImageView
            android:id="@+id/marker_top_static_img3"
            android:layout_width="0dp"
            android:layout_height="@dimen/y300"
            android:layout_weight="1"
            android:src="@drawable/img_default_90x90"
            android:scaleType="fitXY"
            />
        <ImageView
            android:id="@+id/marker_top_static_img4"
            android:layout_width="0dp"
            android:layout_height="@dimen/y300"
            android:layout_weight="1"
            android:src="@drawable/img_default_90x90"
            android:scaleType="fitXY"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:weightSum="3"
        >
        <TextView
            android:id="@+id/marker_top_static_tv1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="变形金刚5经典加强级系列"
            android:textColor="@color/black"
            android:maxLines="2"
            android:lines="2"
            android:ellipsize="end"
            />
        <TextView
            android:id="@+id/marker_top_static_tv2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="变形金刚5经典加强级系列"
            android:textColor="@color/black"
            android:maxLines="2"
            android:lines="2"
            android:ellipsize="end"
            />
        <TextView
            android:id="@+id/marker_top_static_tv3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="变形金刚5经典加强级系列"
            android:textColor="@color/black"
            android:maxLines="2"
            android:lines="2"
            android:ellipsize="end"
            />
    </LinearLayout>
</LinearLayout>