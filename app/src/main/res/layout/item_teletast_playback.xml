<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x200"
        app:srcCompat="@drawable/img_default_300x200"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/item_teletast_playback_img" />

    <ImageView
        android:layout_marginTop="@dimen/x5"
        android:layout_width="@dimen/x100"
        android:layout_height="@dimen/x50"
        app:srcCompat="@drawable/play_back"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/item_teletast_playback_img"
        android:layout_alignEnd="@+id/item_teletast_playback_img"
        android:id="@+id/item_teletast_playback_img_back" />
</RelativeLayout>

    <TextView
        android:layout_marginTop="@dimen/y10"
        android:id="@+id/item_teletast_playback_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="万达盛典"
        android:maxLines="2"
        android:ellipsize="end"
        android:lines="2"
        android:textColor="@color/black"
        android:textSize="15sp"
        />

    <TextView
        android:layout_marginTop="@dimen/y10"
        android:id="@+id/item_teletast_playback_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="23342人已观看"
        />
    </LinearLayout>