<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="test.jiyun.com.shiguangdemo.activity.MainActivity">

    <FrameLayout
        android:id="@+id/Main_FrameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

    </FrameLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#b1b3b4" />

    <RadioGroup
        android:id="@+id/Main_RadioGrop"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="3dp"
        android:orientation="horizontal"
        android:weightSum="5">

        <RadioButton
            android:id="@+id/home_Rbt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/hone"
            android:gravity="center"
            android:text="首页"
            android:textColor="@drawable/text"
            android:textSize="10sp" />

        <RadioButton
            android:id="@+id/ticket_Rbt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/ticket"
            android:gravity="center"
            android:text="购票"
            android:textColor="@drawable/text"
            android:textSize="10sp" />

        <RadioButton
            android:id="@+id/mall_Rbt1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/mall"
            android:gravity="center"
            android:text="商城"
            android:textColor="@drawable/text"
            android:textSize="10sp" />


        <RadioButton
            android:id="@+id/live_Rbt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/live"
            android:gravity="center"
            android:text="直播 live "
            android:textColor="@drawable/text"
            android:textSize="10sp" />

        <RadioButton
            android:id="@+id/mine_Rbt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/mine"
            android:gravity="center"
            android:text="我的"
            android:textColor="@drawable/text"
            android:textSize="10sp" />
    </RadioGroup>

</LinearLayout>
