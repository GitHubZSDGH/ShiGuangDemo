<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <test.jiyun.com.shiguangdemo.utils.ObservableScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <FrameLayout
            android:id="@+id/Mall_fg_Title_Frag"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>


    </test.jiyun.com.shiguangdemo.utils.ObservableScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/Mall_fg_Title_SaoYiSao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="15dp"
            android:src="@drawable/mall_home_scan" />

        <EditText
            android:id="@+id/Mall_fg_Title_Search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/mall_titile_search"
            android:drawableLeft="@drawable/title_search_icon"
            android:focusable="false"
            android:hint="搜索正版电影周边" />

        <ImageView
            android:id="@+id/Mall_fg_Title_Cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/mall_ic_cart" />

    </LinearLayout>


</RelativeLayout>