<?xml version="1.0" encoding="utf-8"?>
<!--<selector xmlns:android="http://schemas.android.com/apk/res/android">-->

<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"
    >
<padding

    android:bottom="12dp"
    android:left="12dp"
    android:right="12dp"
    android:top="12dp"
    ></padding>
    <!--设置圆角-->
    <corners android:radius="200dp"
        ></corners>
    <!--stroke设置描边-->
    <stroke android:width="2dp"
        android:color="@android:color/background_light"></stroke>
    <gradient
        android:startColor="#626fc6"
        android:endColor="#ded8b4"
        android:centerColor="#79e7e3"
        ></gradient>

</shape>